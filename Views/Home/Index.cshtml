@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-center flex-column text-center">
    <div>
        <h1 class="display-4">Bem-Vindo(a)</h1>
    </div>
    <div class="d-flex flex-row mt-5 align-items-center justify-content-center w-100">
        <div class="d-flex flex-column align-items-center justify-content-center p-3 ml-3 mr-3 border rounded">
            <img src="~/imgs/alunoIcon.png" alt="Aluno Icon" class="icon">
            <a class="text-white mt-3" asp-controller="Alunos" asp-action="Index">
                <button class="btn btn-primary entity">
                    Alunos
                </button>
            </a>
        </div>
        <div class="d-flex flex-column align-items-center justify-content-center p-3 ml-3 mr-3 border rounded">
            <img src="~/imgs/professorIcon.png" alt="Professor Icon" class="icon">
            <a class="text-white mt-3" asp-controller="Professores" asp-action="Index">
                <button class="btn btn-primary entity">
                    Professores
                </button>
            </a>
        </div>
        <div class="d-flex flex-column align-items-center justify-content-center p-3 ml-3 mr-3 border rounded">
            <img src="~/imgs/turmaIcon.png" alt="Turma Icon" class="icon">
            <a class="text-white mt-3" asp-controller="Turmas" asp-action="Index">
                <button class="btn btn-primary entity">
                    Turmas
                </button>
            </a>
        </div>
        <div class="d-flex flex-column align-items-center justify-content-center p-3 ml-3 mr-3 border rounded">
            <img src="~/imgs/matriculaIcon.png" alt="Matricula Icon" class="icon">
            <a class="text-white mt-3" asp-controller="Matriculas" asp-action="Index">
                <button class="btn btn-primary entity">
                    Matriculas
                </button>
            </a>
        </div>
    </div>
</div>
